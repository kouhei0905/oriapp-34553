<!doctype html>
<html lang="ja">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  </head>
  <body>
  <div class="bg-transparent">
  <h1 class="text-center text-white">Book share</h1>
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <div class="container">
    <div class="row">
    <div class="mb-3">
    <label for="exampleInputNickname" class="form-label">ニックネーム</label>
    <%= f.text_area :nickname, class:"form-control", id:"nickname", placeholder:"例) book太郎", maxlength:"40" %>
  </div>

  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">メールアドレス</label>
    <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">パスワード</label>
    <%= f.password_field :password, class:"form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="mb-3">
    <label for="exampleInputself_introduction" class="form-label">自己紹介</label>
    <%= f.text_area :self_introduction, class:"form-control", id:"self_introduction", placeholder:"自己紹介を記入してください" %>
  </div>
  <button type="submit" class="btn btn-danger col-4 offset-4">登録</button>
  </div>
  </div>
  <% end %>
  </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
    -->
  </body>
</html>